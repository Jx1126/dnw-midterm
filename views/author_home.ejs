<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/output.css" />
    <title>BLOG-IT: Auther Home</title>
  </head>
  <body>

    <!-- Header Navbar -->
    <%- include('../views/layout/header.ejs') %>


    <!-- Message to display when the user successfully updates their settings -->
    <div class="flex justify-center items-center">
      <% if(typeof success != 'undefined') { %>
          <div id="success_message" class="bg-green-100 border border-green-400 rounded-md text-green-700 px-4 py-3 max-w-xl fixed w-full z-[1]" role="alert">
            <strong class="font-bold">Success:</strong>
            <span class="block sm:inline">
              <%= success %>
            </span>
            <!-- Close icon that remove the success message on click -->
            <button onclick="removeMessage()" class="absolute top-0 bottom-0 right-0 px-4 py-3">
              <svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
            </button>
          </div>
      <% } %>
    </div>

    <!-- Settings button -->
    <div class="flex justify-end mr-10 mt-5">
      <form action="/author/settings" method="GET">
        <button href="#" class="btn btn-secondary w-40">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
          </svg>
          Settings
        </button>
      </form>
    </div>

    <!-- Hero section -->
    <section>
      <h1>Author Homepage</h1>
      <h1 class="font-medium text-xl mt-5">Express your creativy<br>and share them with the world!</p>
        <form action="/author/edit" method="GET">
          <!-- Container to center new draft button -->
          <div class="flex justify-center mt-16">
            <!-- New draft button -->
            <button href="#" class="btn btn-primary text-slate-800 text-lg h-16 w-56 md:w-80">Create New Draft</button>
          </div>
        </form>
        <!-- Container to store published articles and draft articles button -->
        <div class="flex flex-col items-center justify-center gap-2 mt-5 sm:flex-row">
          <!-- Links to the published articles section of the page -->
          <a href="#published_articles" class="btn btn-secondary text-slate-200 text-lg h-16 w-56">Published Articles</a>
          <!-- Links to the draft articles section of the page -->
          <a href="#draft_articles" class="btn btn-secondary text-slate-200 text-lg h-16 w-56">Draft Articles</a>
        </div>
    </section>

    <!-- Published articles section -->
    <section id="published_articles">
      <h1>Published Articles</h1>
      <!-- Grid container that stores all the article cards -->
      <div class="grid grid-cols-1 mt-7 gap-5 p-5 overflow-hidden bg-slate-400 shadow-xl rounded-lg md:grid-cols-1 lg:grid-cols-2 2xl:grid-cols-3">
        <!-- Loop through the published articles to display information in the card -->
        <% published.forEach(function(article) { %>
          <!-- Article cards container -->
          <div class="card w-full h-auto shadow-xl bg-slate-100">
            <!-- Body container for information in the card -->
            <div class="card-body">
              <!-- Article title -->
              <h2 class="card-title text-slate-700"><%= article.title %></h2>
              <!-- Article description -->
              <p class="text-slate-600"><%= article.content %></p>
              <!-- Container that stores the article information -->
              <div class="flex flex-col justify-start gap-x-4 mt-5">
                <!-- Container to store the view icon and the views amount in a row -->
                <div class="flex items-center text-slate-400 gap-2">
                  <!-- View icon -->
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                  </svg>
                  <!-- Views amount -->
                  <p>
                    <%= article.reads %>
                  </p>
                </div>
                <!-- Container to store the like icon and the likes amount in a row -->
                <div class="flex items-center text-slate-400 gap-2">
                  <!-- Like icon -->
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                  </svg>  
                  <!-- Likes amount -->
                  <p>
                    <%= article.likes %>
                  </p>
                </div>
                <!-- Modification information -->
                <p class="text-slate-400"> Time created: <%= article.creation %></p>
                <p class="text-slate-400"> Publication date: <%= article.publication %></p>
                <p class="text-slate-400"> Last modified: <%= article.modified %></p>
              </div>
              <!-- Action section for the card -->
              <div class="card-actions mt-3 items-center justify-between">
                <!-- Links to the article -->
                <form action="/reader/article" method="GET" class="flex-grow">
                  <button type="submit" class="btn btn-primary w-full">START READING!</button>
                </form>
                <!-- Share button -->
                <a href="#" class="btn btn-info btn-square text-purple-950" title="Share">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 1 0 0 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186 9.566-5.314m-9.566 7.5 9.566 5.314m0 0a2.25 2.25 0 1 0 3.935 2.186 2.25 2.25 0 0 0-3.935-2.186Zm0-12.814a2.25 2.25 0 1 0 3.933-2.185 2.25 2.25 0 0 0-3.933 2.185Z" />
                  </svg>                            
                </a>
                <!-- Delete button -->
                <a href="#" class="btn btn-error btn-square text-red-950" title="Delete">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Draft articles section -->
    <section id="draft_articles">
      <h1>Draft Articles</h1>
      <!-- Grid container that stores all the article cards -->
      <div class="grid grid-cols-1 mt-7 gap-5 p-5 overflow-hidden bg-slate-400 shadow-xl rounded-lg md:grid-cols-1 lg:grid-cols-2 2xl:grid-cols-3">
        <!-- Loop through the draft articles to display information in the card -->
        <% draft.forEach(function(article) { %>
          <!-- Article cards container -->
          <div class="card w-full h-auto shadow-xl bg-slate-100">
            <!-- Body container for information in the card -->
            <div class="card-body">
              <!-- Article title -->
              <h2 class="card-title text-slate-700"><%= article.title %></h2>
              <!-- Article description -->
              <p class="text-slate-600"><%= article.content %></p>
              <!-- Container that stores the article information -->
              <div class="flex flex-col justify-start gap-x-4 mt-5">
                <!-- Modification information -->
                <p class="text-slate-400"> Time created: <%= article.creation %></p>
                <p class="text-slate-400"> Publication date: <%= article.publication %></p>
                <p class="text-slate-400"> Last modified: <%= article.modified %></p>
              </div>
              <!-- Action section for the card -->
              <div class="card-actions mt-3 items-center justify-between">
                <!-- Publish article button -->
                <form action="#" method="GET" class="flex-grow">
                  <button type="submit" class="btn btn-primary w-full">PUBLISH</button>
                </form>
                <!-- Edit button -->
                <form action="/author/edit" method="GET">
                  <button href="#" class="btn btn-warning btn-square text-yellow-950" title="Edit">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                    </svg>                                     
                  </button>
                </form>
                <!-- Delete button -->
                <a href="#" class="btn btn-error btn-square text-red-950" title="Delete">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </section>

    <!-- Footer -->
    <%- include('../views/layout/footer.ejs') %>

    <!-- New draft button with a fixed positioning -->
    <form action="/author/edit" method="GET">
      <button class="btn btn-success text-green-950 w-40 h-24 fixed bottom-4 right-4">
        <!-- New draft icon -->
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="size-6 inline-block align-text-bottom mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.5v15m7.5-7.5h-15"/>
        </svg>    
        New Draft
      </button>
    </form>
  </body>
  <script>
    function removeMessage() {
      const remove_message = document.getElementById("success_message");
      if (remove_message) {
        remove_message.remove();
      }
    }
  </script>
</html>