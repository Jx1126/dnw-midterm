    "express-session": "^1.18.0",
    "express-validator": "^7.1.0",
    "sqlite3": "^5.1.2"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "devDependencies": {
